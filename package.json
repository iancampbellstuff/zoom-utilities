{
  "name": "zoom-utilities",
  "version": "1.0.0",
  "description": "An app for simplifying Zoom tasks.",
  "productName": "Zoom Utilities",
  "author": "iancampbellstuff",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "client",
    "common",
    "server"
  ],
  "engines": {
    "node": "20.x",
    "npm": ">=10.x"
  },
  "scripts": {
    "start": "npx --no-install npm-run-all --parallel start-client start-server",
    "start-client": "npm start -w @zoom-utilities/client",
    "start-server": "npm start -w @zoom-utilities/server",
    "test": "npm test -ws",
    "test-open": "npm run -ws test-open"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
