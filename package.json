{
  "name": "zoom-utilities",
  "version": "0.0.1",
  "description": "An app for simplifying Zoom tasks.",
  "productName": "Zoom Utilities",
  "author": "icampbell2",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "client",
    "common",
    "server"
  ],
  "scripts": {
    "preinstall-all": "npm ci",
    "install-all": "lerna run ci --scope={client,common,server}",
    "start": "lerna run start --scope={client,server}",
    "test": "lerna run test --scope={client,common,server}"
  },
  "devDependencies": {
    "husky": "7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  }
}
