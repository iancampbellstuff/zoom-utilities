{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "paths": {
      "@zoom-utilities/common/*": ["../common/src/*"]
