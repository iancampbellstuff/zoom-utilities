    "resolveJsonModule": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["../../node_modules/@types", "@types", "node_modules/@types"],
    "types": ["compression", "express", "jest", "node"]
  },
  "include": ["src"]
